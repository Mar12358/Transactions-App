<div class="header">
  <h2>Log in</h2>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-container" }) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input-field"  %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class: "input-field" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: "remember-me-cb" %>
      <%= f.label :remember_me,  class: "remember-me-label" %>
    </div>
  <% end %>

  <div class="form-btn-container">
    <%= f.submit "Log in", class: "form-btn" %>
  </div>
<% end %>
