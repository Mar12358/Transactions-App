<a href="<%= groups_path %>">
  <img class="back-btn"  src="<%= asset_path('arrow_back.ico') %>" alt="Back" id="back-img">
</a>
<h1 id = "form-title" class= "">Add new Category</h1>
<%= form_with(model: [@category], url: groups_path) do |form| %>
  <div class = "form-container mx-5">
    <div class="form-group text-center mt-2">
      <%= form.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Category Name", class: "form-control", required: true %>
    </div>
    <div class="form-group text-center mt-2">
      <%= form.text_field :icon, autofocus: true, autocomplete: "icon", placeholder: "Image Icon URL", class: "form-control", required: true %>
    </div>
    

    <div class="text-center">
      <%= form.submit 'Create Category', class: "btn btn-primary mt-3"%>
    </div>
  </div>
<% end %>